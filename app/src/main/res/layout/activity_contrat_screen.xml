<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modules.jules.microcredit.ContratScreen">

    <ScrollView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="@dimen/padding_contrat_content"
            android:id="@+id/contrat_content"
            android:textAlignment="textStart"
            android:textSize="@dimen/size_contrat_content"
            android:text="@string/contrat_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkcontrat"
            android:text="J'accepte"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:textSize="18dp"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:alpha="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="invisible"
            android:id="@+id/next_contrat"
            android:text="suivant"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>
